.root {
  background: #0099ff;
  margin: 10px auto;
  padding: 20px 10px;
  font-family: monospace;
  width: 300px;
  height: 120px;
  border: 1;
  border-radius: 8px;
  display: block;
  font-size: 20px;
  line-height: 20px;
  font-weight: 500;
  cursor: pointer;
  transition: 250ms ease-in-out;
}

:hover.root {
  background-color: #000066;
  color: #ffffe6;
  transition: 0.5s;
}
