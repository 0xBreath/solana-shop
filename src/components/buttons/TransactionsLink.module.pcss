.link {
  padding: 16px;
  margin: 16px;
  gap: 8px;
  font-weight: 500;
  color: inherit;
  text-decoration: none;
  cursor: pointer;
}

.button {
  background: #ff6666;
  margin: 30px auto;
  padding: 20px 10px;
  width: 300px;
  height: 120px;
  border: 1;
  border-radius: 8px;
  display: block;
  font-size: 20px;
  line-height: 20px;
  font-weight: 500;
  cursor: pointer;
  transition: 250ms ease-in-out;
}

:hover.button {
  background-color: #800000;
  transition: 0.5s;
}
